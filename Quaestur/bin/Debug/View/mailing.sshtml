@Master['View/master.sshtml']

@Section['script']
<script>
  function updateMailingList(){
      $.get("/mailing/list", function(data, status){
          if (data){
              $("#mailingList").html(data);
          }
      });
  }
  $(document).ready(function(){
      updateMailingList();
  });
</script>
@EndSection

@Section['data']
<div class="container" id="mailingList">
</div>
@EndSection