@Section['script']
<script>
  function updatePetitionList(){
      $.get("/petition/list", function(data, status){
          if (data){
              $("#petitionList").html(data);
          }
      });
  }
  $(document).ready(function(){
      updatePetitionList();
  });
</script>
@EndSection

@Section['data']
<div class="container" id="petitionList">
</div>
@EndSection