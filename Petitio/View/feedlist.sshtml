<script>
$("#queueRowAdd").click(function(){
  $.get("/queue/add", function(data, status){
    if (data){
      $('#queueEditDialog').replaceWith(data);
      $('#queueEditDialog').modal('show');
    }
  });
});
@Each.List
$("#queueRowEdit@Current.Id").click(function(){
  $.get("/queue/edit/@Current.Id", function(data, status){
    if (data){
      $('#queueEditDialog').replaceWith(data);
      $('#queueEditDialog').modal('show');
    }
  });
});
$("#queueRowDelete@Current.Id").click(function(){
  $.confirm({
    title: "@Model.PhraseDeleteConfirmationTitle",
    content: "@Current.PhraseDeleteConfirmationQuestion<br/><br/>@Model.PhraseDeleteConfirmationInfo",
    buttons: {
      confirm: function () {
        $.get("/queue/delete/@Current.Id", function(data, status){
          updateQueueList();
        });
      },
      cancel: function () {},
    }
  });
});
@EndEach
</script>
<table class="table table-hover table-fixed">
  <thead>
    <tr class='centering clickable-row'>
      <th colspan="2" width="70%">@Model.PhraseHeaderName</th>
      <th colspan="2" width="30%"></th>
    </tr>
  </thead>
  <tbody>
    @Each.List
    <tr class='clickable-row'>
      <td width="@Current.Indent"></td>
      <td width="@Current.Width" id="queueRowEdit@Current.Id" class="@Current.Editable">@Current.Name</td>
      <td width="25%"><a href="/group/@Current.Id">@Model.PhraseHeaderGroups</a></td>
      <td width="5%" id="queueRowDelete@Current.Id" class="@Current.Editable"><span class="fas fa-trash-alt"></span></td>
    </tr>
    @EndEach
    @If.AddAccess
    <tr class='centering clickable-row'>
      <td colspan="2" width="70%" id="queueRowAdd" class="editable"><span class="fas fa-plus-circle"></span></td>
      <td colspan="2" width="30%"></td>
    </tr>
    @EndIf
  </tbody>
</table>
<div id="queueEditDialog"/>