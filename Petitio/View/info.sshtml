@Master['View/master.sshtml']

@Section['input']
<div class="container">
  <div class="form-row">
    <div class="col-6 mb-3">
      <h3>@Model.Title</h3>
    </div>
  </div>
  <div class="form-row">
    <div class="col-6 mb-3">
      <p>@Model.Text</p>
    </div>
  </div>
  <div class="form-row">
    <div class="col-6 mb-3">
      <p><a href="@Model.LinkAddress">@Model.LinkTitle</a></p>
    </div>
  </div>
@EndSection