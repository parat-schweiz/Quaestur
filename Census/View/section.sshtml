@Master['View/master.sshtml']

@Section['script']
<script>
  function updateSectionList(){
      $.get("/section/list/@Model.Id", function(data, status){
          if (data){
              $("#sectionList").html(data);
          }
      });
  }
  $(document).ready(function(){
      updateSectionList();
  });
</script>
@EndSection

@Section['data']
<div class="container" id="sectionList">
</div>
@EndSection